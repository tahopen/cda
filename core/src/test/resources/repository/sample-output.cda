<?xml version="1.0" encoding="utf-8"?>
<CDADescriptor>

  <!-- DataSource definition.

  Type controls what the datasource type is.
  The connection and query controls how the data is fetched. These values
  are specific to each access type

  -->
  <DataSources>
    <Connection id="1" type="mondrian.jdbc">
      <Driver>org.hsqldb.jdbcDriver</Driver>
      <Url>jdbc:hsqldb:res:sampledata</Url>
      <User>pentaho_user</User>
      <Pass>password</Pass>
      <Catalog>res:repository/steelwheels.mondrian.xml</Catalog>
      <Cube>SteelWheelsSales</Cube>
    </Connection>
  </DataSources>
  <!-- DataAccess object controls the query itself

  Access controls if the datasource can be seen from the outside or is to
  be used from a Compound datasource only

  -->

  <DataAccess id="1" connection="1" type="mdx" access="public">
    <Name>Mdx invalid value</Name>
    <Query>with set [MyMarkets] as '{[Markets].[All Markets]}'
      member [Measures].[Invalid] as '(0 / 0)'
      select {[Measures].[Invalid]} ON COLUMNS,
      {[MyMarkets]} ON ROWS
      from [SteelWheelsSales]
    </Query>
  </DataAccess>

  <DataAccess id="2" connection="1" type="mdx" access="public">
    <Name>Sample query on SteelWheelsSales</Name>
    <Query><![CDATA[
      select {[Measures].[Sales]} ON Rows,
      NON EMPTY  Descendants([Time].Children,1) ON COLUMNS
      from [SteelWheelsSales]
      where ([Order Status].[${status}])
    ]]></Query>
    <Parameters>
      <Parameter name="status" type="String" default="In Process" separator=";"/>
    </Parameters>
    <Columns>
      <Column idx="1">
        <Name>Year</Name>
      </Column>
      <Column idx="2">
        <Name>price</Name>
      </Column>
      <CalculatedColumn>
        <Name>PriceInK</Name>
        <Formula>=[price]/1000000</Formula>
      </CalculatedColumn>
    </Columns>
    <Output mode="exclude" indexes="3,4,5,6,7,8,9,10,11"/>
  </DataAccess>
</CDADescriptor>
